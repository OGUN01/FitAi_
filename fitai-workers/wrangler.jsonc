/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "fitai-workers",
	"main": "src/index.ts",
	"compatibility_date": "2025-11-13",
	"account_id": "914022281183abb7ca6a5590fec4b994",
	"observability": {
		"enabled": true,
	},
	"kv_namespaces": [
		{
			"binding": "WORKOUT_CACHE",
			"id": "942e889744074aaf8fec18b8fcfcead2",
		},
		{
			"binding": "MEAL_CACHE",
			"id": "cbb7e628737b44a2ba1fe4ba5b1db738",
		},
		{
			"binding": "RATE_LIMIT_KV",
			"id": "8d7801f724f44f3f88af4902de262551",
		},
	],
	"r2_buckets": [
		{
			"binding": "FITAI_MEDIA",
			"bucket_name": "fitai-media",
		},
	],
	"vars": {
		"VERCEL_AI_GATEWAY_URL": "https://ai-gateway.vercel.sh/v1",
		"CLOUDFLARE_AI_GATEWAY_ACCOUNT_ID": "914022281183abb7ca6a5590fec4b994",
		"CLOUDFLARE_AI_GATEWAY_SLUG": "fitai-production",
		"CLOUDFLARE_AI_GATEWAY_URL": "https://gateway.ai.cloudflare.com/v1/914022281183abb7ca6a5590fec4b994/fitai-production",
		"RULE_BASED_ROLLOUT_PERCENTAGE": "100",
	},
	"#queues_comment": "Queues require paid plan. When you upgrade, uncomment this section",
	"#queues": {
		"producers": [
			{
				"binding": "DIET_GENERATION_QUEUE",
				"queue": "fitai-diet-generation",
			},
		],
		"consumers": [
			{
				"queue": "fitai-diet-generation",
				"max_batch_size": 1,
				"max_batch_timeout": 1,
				"max_retries": 1,
				"dead_letter_queue": "fitai-diet-generation-dlq",
			},
		],
	},
	"triggers": {
		"crons": ["* * * * *"],
	},
}
